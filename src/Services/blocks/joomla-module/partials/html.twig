{% set id = field('id') %}
{% set class = field('class') %}

{% set module_id = field('module_id') %}
{% set classes = classNames('qx-element qx-element-joomla-mod-v2', visibilityClass(node.visibility), class ) %}
{% set animation = field("animation") %}
{% set animationRepeat = field("animation_repeat") %}
{% set animationDelay = field('animation_delay').value %}
{% set background = field('background') %}
	
{% embed "animation.twig" with {
    "id" : id,
    "classes" : classes,
    "animation" : animation,
    "animationRepeat" : animationRepeat,
    "animationDelay" : animationDelay,
    "background" : background
} %}
    {% block element %}
        {{ getJoomlaModule(module_id, 'none')|raw }}
    {% endblock %}
{% endembed %}